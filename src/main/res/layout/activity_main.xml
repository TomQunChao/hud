<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/id_txv_searchpoint" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:hint="点这里选择起点终点"/>
    </LinearLayout>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <com.amap.api.maps.MapView android:id="@+id/amap_map_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/id_route_cal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/id_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="模拟"/>
        <Button android:id="@+id/id_btn_startnavi" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="开始导航" android:layout_weight="1"/>
        <Button android:id="@+id/id__btn_nextroute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="选路线"/>
    </LinearLayout>
</LinearLayout>
